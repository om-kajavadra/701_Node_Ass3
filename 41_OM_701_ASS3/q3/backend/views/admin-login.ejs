<!doctype html>
<html>
<head><title>Admin Login</title><link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"></head>
<body class="container py-5">
  <h3>Admin Login</h3>
  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% }%>
  <form method="post">
    <div class="mb-3"><input name="username" class="form-control" placeholder="username" /></div>
    <div class="mb-3"><input name="password" type="password" class="form-control" placeholder="password" /></div>
    <button class="btn btn-primary">Login</button>
  </form>
</body>
</html>
